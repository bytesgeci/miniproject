generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // change to mysql/sqlite if needed
  url      = env("DATABASE_URL")
}

model User {
  user_id      Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  phone        String?
  designation  String?
  department   String?
  firebase_uid String?
  created_at   DateTime  @default(now())

  roles        UserRole[]
  notifications Notification[]
  auditLogs    AuditLog[]
}

model Role {
  role_id Int    @id @default(autoincrement())
  role    String

  users   UserRole[]
}

model UserRole {
  userrole_id Int  @id @default(autoincrement())
  user_id     Int
  role_id     Int

  user User @relation(fields: [user_id], references: [user_id])
  role Role @relation(fields: [role_id], references: [role_id])
}

model AcademicYear {
  year_id       Int    @id @default(autoincrement())
  academic_year String

  semesters   Semester[]
  courseFiles CourseFile[]
}

model Semester {
  sem_id   Int @id @default(autoincrement())
  sem_no   Int
  year_id  Int

  year     AcademicYear @relation(fields: [year_id], references: [year_id])
  courses  Course[]
  courseFiles CourseFile[]
}

model Course {
  course_id   Int    @id @default(autoincrement())
  code        String
  c_name      String
  sem_id      Int
  regulations String?

  semester Semester @relation(fields: [sem_id], references: [sem_id])
  assigns  CourseAssign[]
  courseFiles CourseFile[]
}

model CourseAssign {
  assign_id  Int    @id @default(autoincrement())
  course_id  Int
  faculty_id Int
  role       String

  course Course @relation(fields: [course_id], references: [course_id])
  faculty Faculty @relation(fields: [faculty_id], references: [faculty_id])
}

model Faculty {
  faculty_id   Int    @id @default(autoincrement())
  courses      String?
  events       String?
  last_updated DateTime?

  assignments CourseAssign[]
}

model CourseFile {
  course_file_id Int @id @default(autoincrement())
  course_id      Int
  sem_id         Int
  year_id        Int
  created_by    Int
  status         String
  created_at     DateTime @default(now())

  course    Course       @relation(fields: [course_id], references: [course_id])
  semester  Semester     @relation(fields: [sem_id], references: [sem_id])
  year      AcademicYear @relation(fields: [year_id], references: [year_id])
  documents CourseFileDocument[]
}

model Checklist {
  checklist_id   Int    @id @default(autoincrement())
  check_name     String
  applicable_to  String

  items ChecklistItem[]
  documents CourseFileDocument[]
}

model ChecklistItem {
  item_id      Int @id @default(autoincrement())
  checklist_id Int
  item_name    String
  mandate      String

  checklist Checklist @relation(fields: [checklist_id], references: [checklist_id])
  verifications Verification[]
}

model CourseFileDocument {
  document_id     Int @id @default(autoincrement())
  course_file_id  Int
  checklist_id    Int
  uploaded_by     Int
  file_path       String
  uploaded_at     DateTime @default(now())

  courseFile CourseFile @relation(fields: [course_file_id], references: [course_file_id])
  checklist  Checklist  @relation(fields: [checklist_id], references: [checklist_id])
  audits     CourseFileAudit[]
}

model CourseFileAudit {
  audit_id    Int @id @default(autoincrement())
  document_id Int
  verified_by Int
  status      String
  remarks     String?
  verified_at DateTime?

  document CourseFileDocument @relation(fields: [document_id], references: [document_id])
}

model Verification {
  verification_id Int @id @default(autoincrement())
  co_file_id      Int
  item_id         Int
  verified_by     Int
  status          String
  verified_at     DateTime?

  item ChecklistItem @relation(fields: [item_id], references: [item_id])
}

model Remark {
  remark_id       Int @id @default(autoincrement())
  verification_id Int
  remark_text     String
  added_by        Int
  added_at        DateTime @default(now())
}

model Student {
  student_id Int @id @default(autoincrement())
  name       String
  reg_num    String
  batch      String
  department String

  activities StudentActivity[]
  documents  StudentDocument[]
  internships Internship[]
}

model StudentActivity {
  activity_id     Int @id @default(autoincrement())
  student_id      Int
  event_id        Int
  activity_points Int
  role            String

  student Student @relation(fields: [student_id], references: [student_id])
}

model StudentDocument {
  doc_id      Int @id @default(autoincrement())
  student_id  Int
  doc_type    String
  uploaded_at DateTime @default(now())

  student Student @relation(fields: [student_id], references: [student_id])
}

model Internship {
  internship_id Int @id @default(autoincrement())
  student_id    Int
  company       String
  duration      String

  student Student @relation(fields: [student_id], references: [student_id])
}

model Community {
  event_id    Int @id @default(autoincrement())
  event_name  String
  organization String
  mentor_id   Int
  date        DateTime
}

model Notification {
  notification_id Int @id @default(autoincrement())
  user_id         Int
  message         String
  is_read         Boolean @default(false)
  created_at      DateTime @default(now())

  user User @relation(fields: [user_id], references: [user_id])
}

model AuditLog {
  log_id  Int @id @default(autoincrement())
  user_id Int
  action  String

  user User @relation(fields: [user_id], references: [user_id])
}

model ExtAccess {
  access_id    Int @id @default(autoincrement())
  auditor_id   Int
  access_level String
}
